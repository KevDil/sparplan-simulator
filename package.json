{
  "name": "etf-sparplan-simulator",
  "version": "3.0.0",
  "description": "ETF Sparplan & Entnahme Simulator mit Monte-Carlo-Analyse - Vue 3 Edition",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build:legacy": "node build.js",
    "dev:legacy": "npx http-server docs -p 8080 -c-1",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "keywords": [
    "etf",
    "sparplan",
    "simulator",
    "monte-carlo",
    "fire",
    "retirement",
    "german-tax"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/cli": "^7.4.4",
    "@vitejs/plugin-vue": "^5.2.1",
    "esbuild": "^0.27.1",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "vite": "^6.0.3",
    "vitest": "^2.1.8"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "mjs"
    ],
    "transform": {},
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 70,
        "functions": 80,
        "lines": 80
      }
    }
  },
  "dependencies": {
    "@capacitor/core": "^7.4.4",
    "pinia": "^2.3.0",
    "vue": "^3.5.13"
  }
}
