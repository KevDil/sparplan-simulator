{
  "name": "etf-sparplan-simulator",
  "version": "2.0.0",
  "description": "ETF Sparplan & Entnahme Simulator mit Monte-Carlo-Analyse",
  "type": "module",
  "scripts": {
    "dev": "npx http-server docs -p 8080 -c-1",
    "build": "node build.js",
    "watch": "node build.js --watch",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "keywords": [
    "etf",
    "sparplan",
    "simulator",
    "monte-carlo",
    "fire",
    "retirement",
    "german-tax"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@capacitor/cli": "^7.4.4",
    "esbuild": "^0.27.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "mjs"
    ],
    "transform": {},
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 70,
        "functions": 80,
        "lines": 80
      }
    }
  },
  "dependencies": {
    "@capacitor/core": "^7.4.4"
  }
}
